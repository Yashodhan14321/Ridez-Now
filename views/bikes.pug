extends layout

block content
  center(style='position: absolute; top: 50%; left: 50%; transform: translate(-50%,-50%);')
    div(style="width:100%; max-height:80vh; overflow:auto;")
      .container
        .wrap-login100
          ul.list-group
            each bike, i in bikes
              li.list-group-item
                a(href="/bike/"+bike._id style="float:left;")
                  div=bike.bikename
                  div=bike.costperhour
                    |  INR/HOUR
                  div
                    | STATUS: 
                    if bike.count!=0
                      | Available
                    else
                      | Not Available
                if admin.username=='adminrideznow'
                  a(href='/deletebike/'+bike._id+'/'+cities._id)
                    Button(value="remove" style="float:right; width:90px; border-radius: 10px; background-color:red; color:#fff; margin-top:20px;")
                      | REMOVE    
    if admin.username=='adminrideznow'
      a(href="/addbike/"+cities._id)
        Button(class="btn" style="border-radius: 10px; background-color:Blue; color:#fff;")
          | ADD BIKE
  