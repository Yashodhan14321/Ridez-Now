  body
    nav.navbar.navbar-expand-md.bg-dark.navbar-dark(style="z-index:200; float:left; width:100%;")
      a.navbar-brand(href='/home') Ridez Now
      button.navbar-toggler(type='button',style="float:right;" data-toggle='collapse', data-target='#collapsibleNavbar')
        span.navbar-toggler-icon
      #collapsibleNavbar.collapse.navbar-collapse
        ul.navbar-nav
          li.nav-item
            a.nav-link(href='/about') About
          li.nav-item
            a.nav-link(href='/bookings') My Bookings
          li.nav-item
            a.nav-link(href='/liimgupload') My Profile
          li.nav-item
            a.nav-link(href='/users/logout') LogOut
    center(style='position: absolute; top: 50%; left: 50%; transform: translate(-50%,-50%);')
        div(style="font-size:20px;") #{booking.username}
        br
        img.img-responsive(src=booking.liscenceimg onerror="this.src='/imagedb/profileimg/avatar.png'" style="width:300px; height:150px")
        br
        div(style="font-size:20px;") #{booking.bikename}
        br
        if(booking.ongoing==-1)
            div
                | CLICK THE BUTTON TO START THIS RIDE
            div
                | STATUS: BOOKED
            br
            a(href="/bookings/admin/"+booking._id+"/"+0)
                .switch
                    .circle
        else if(booking.ongoing==0)
            div
                | STATUS: ON GOING
            br
            a(href="/bookings/admin/"+booking._id+"/"+1)
                .switch1
                    .circle1
        else if(booking.ongoing==1)
            div
                | STATUS: COMPLETED
        br
        br
        if(booking.payed==0)
            a(href="/booking/payed/"+booking._id)
                button.btn(style="background-color:blue; height:40px; border-radius:5px; color:#fff;")
                    | PRESS IF PAYEMENT RECEIVED
        else if(booking.payed==1)
            button.btn(style="background-color:blue; height:40px; border-radius:5px; color:#fff;")
                    | PAYEMENT RECEIVED
    a(href="/booking/cancel/"+booking._id)
        button.btn-danger(style="position:fixed; width:100%; bottom:0; left:0; height:40px; border-radius:5px; color:#fff;")
            | DELETE RIDE
    script(src='/vendor/jquery/jquery-3.2.1.min.js')
