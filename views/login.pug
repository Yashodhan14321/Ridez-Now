  body
    center(style='position: absolute; top: 50%; left: 50%; transform: translate(-50%,-50%);')
      .limiter
        .container
          .wrap-login100
            form.login100-form.validate-form(action='/users/login', method='POST')
              span.login100-form-title.p-b-48
                img.img-responsive(src='/images/rideznow.png', width='60%', height='70vh')
              != messages('message', locals)
              if errors
                each error, i in errors
                  div(class="alert alert-danger") #{error.msg}
              .wrap-input100.validate-input(data-validate='Required')
                input.input100(type='text', name='username')
                span.focus-input100(data-placeholder='Username')
              .wrap-input100.validate-input(data-validate='Required')
                span.btn-show-pass
                  i.zmdi.zmdi-eye
                input.input100(type='password', name='password')
                span.focus-input100(data-placeholder='Password')
              .container-login100-form-btn
                .wrap-login100-form-btn
                  .login100-form-bgbtn
                  button.login100-form-btn(type='submit', value='submit')
                    | Login
              .text-center.p-t-115
                span.txt1
                  | Donâ€™t have an account?
                a.txt2(href='/users/signup')
                  | Sign Up
