  body
    nav.navbar.navbar-expand-md.bg-dark.navbar-dark(style="z-index:200; float:left; width:100%;")
      a.navbar-brand(href='#') Ridez Now
      button.navbar-toggler(type='button',style="float:right;" data-toggle='collapse', data-target='#collapsibleNavbar')
        span.navbar-toggler-icon
      #collapsibleNavbar.collapse.navbar-collapse
        ul.navbar-nav
          li.nav-item
            a.nav-link(href='#') About
          li.nav-item
            a.nav-link(href='/bookings') My Bookings
          li.nav-item
            a.nav-link(href='#') My Profile
          li.nav-item
            a.nav-link(href='/users/logout') LogOut
    center(style='position: absolute; top: 50%; left: 50%; transform: translate(-50%,-50%);')
        div(style="width:100%; max-height:80vh; overflow:auto;")
            if username != "adminrideznow"
                .container
                  .wrap-login100
                    ul.list-group
                      each booky, i in booking
                        if(booky.username==username)
                            li.list-group-item
                              a(href="/bookings/"+booky._id)
                                div=booky.bikename
                                div=booky.takenontime
                                div=booky.returnednontime
                                div=booky.hours
                                if(booky.ongoing==1)
                                    div
                                        | COMPLETED
                                else if(booky.ongoing==-1)
                                    div
                                        | BOOKED
                                else
                                    div
                                        | ON GOING
            else
                .container
                  .wrap-login100
                    ul.list-group
                      each booky, i in booking
                        li.list-group-item
                          a(href="/bookings/admin/"+booky._id)
                            div=booky.username
                            div=booky.bikename
                            div=booky.takenontime  
                                #{booky.returnednontime}
                            div=booky.hours
                            if(booky.ongoing==1)
                                div
                                    | COMPLETED
                            else if(booky.ongoing==-1)
                                div
                                    | BOOKED
                            else
                                div
                                    | ON GOING
